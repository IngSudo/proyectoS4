@model AplicacionNomina.Models.Employee
@{
    ViewBag.Title = "Crear empleado";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.EmpNo)
        @Html.TextBoxFor(m => m.EmpNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.EmpNo, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CI)
        @Html.TextBoxFor(m => m.CI, new { @class = "form-control", placeholder = "Cédula" })
        @Html.ValidationMessageFor(m => m.CI, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Nombres" })
        @Html.ValidationMessageFor(m => m.FirstName, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Apellidos" })
        @Html.ValidationMessageFor(m => m.LastName, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Gender)
        @Html.DropDownListFor(m => m.Gender, (SelectList)ViewBag.Generos,
            "-- Seleccione --", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Gender, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.BirthDate)
        @Html.TextBoxFor(
            m => m.BirthDate,
            "{0:yyyy-MM-dd}",
            new
                {
                    type = "date",
                @class = "form-control",
                min = "1945-01-01",
                max = DateTime.Now.ToString("yyyy-MM-dd") // no permite fechas futuras
            }
        )
        @Html.ValidationMessageFor(m => m.BirthDate, null, new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.HireDate)
        @Html.TextBoxFor(m => m.HireDate, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HireDate, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Correo)
        @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", placeholder = "correo@empresa.com" })
        @Html.ValidationMessageFor(m => m.Correo, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-default" href="@Url.Action("Index")">Cancelar</a>
}

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
