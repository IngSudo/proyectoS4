@{
    ViewBag.Title = "Sign up";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Crear una cuenta</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { theme: { extend: { colors: { brand: "#ff3b4e" } } } }
    </script>
</head>
<body class="min-h-screen flex items-center justify-center bg-black">

    <section class="bg-white rounded-2xl shadow-lg p-10 w-full max-w-2xl">
        <h2 class="text-center text-3xl font-bold mb-4 text-slate-800">Crear tu cuenta</h2>
        <p class="text-center text-slate-500 mb-8">Completa los datos</p>

        @if (ViewBag.Error != null)
        {
            <div class="mb-6 rounded-lg border border-rose-200 bg-rose-50 text-rose-700 px-4 py-3 text-sm">
                @ViewBag.Error
            </div>
        }

        @using (Html.BeginForm("Registrar", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="Cedula" class="block text-sm font-medium text-slate-700 mb-1">Cédula</label>
                    <input id="Cedula" name="Cedula" inputmode="numeric" pattern="^[0-9\.\-]{6,20}$" placeholder="Ej. 12345678"
                           class="block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900 placeholder-slate-400
                                  focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400" required />
                    <small class="text-slate-400">Solo números</small>
                </div>

                <div>
                    <label for="FechaNacimiento" class="block text-sm font-medium text-slate-700 mb-1">Fecha de nacimiento</label>
                    <input id="FechaNacimiento" name="FechaNacimiento" type="date" required autocomplete="bday"
                           class="block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900
                                  focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                    <label for="Nombre" class="block text-sm font-medium text-slate-700 mb-1">Nombre</label>
                    <input id="Nombre" name="Nombre" required
                           class="block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900
                                  focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400" />
                </div>
                <div>
                    <label for="Apellido" class="block text-sm font-medium text-slate-700 mb-1">Apellido</label>
                    <input id="Apellido" name="Apellido" required
                           class="block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900
                                  focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400" />
                </div>
            </div>

            <div class="mb-6">
                <label for="Email" class="block text-sm font-medium text-slate-700 mb-1">Email</label>
                <input id="Email" name="Email" type="email" required autocomplete="email"
                       class="block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900
                              focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400" />
            </div>

            <div class="mb-2">
                <label for="Clave" class="block text-sm font-medium text-slate-700 mb-1">Contraseña</label>
                <input id="Clave" name="Clave" type="password" required autocomplete="new-password"
                       minlength="6" placeholder="Mínimo 6 caracteres"
                       class="block w-full rounded-lg border border-slate-300 px-4 py-3 text-slate-900
                              focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400" />
            </div>

            <!-- Checkbox para mostrar contraseña -->
            <div class="mb-6 flex items-center gap-2">
                <input type="checkbox" id="showPassword" class="h-4 w-4 text-brand border-slate-300 rounded focus:ring-brand">
                <label for="showPassword" class="text-sm text-slate-700">Mostrar contraseña</label>
            </div>

            <button type="submit"
                    class="w-full rounded-lg bg-brand hover:bg-[#e83547] text-white font-semibold py-3 shadow transition mb-4">
                Crear cuenta
            </button>

            <p class="text-center text-slate-500 mt-2 text-sm">
                ¿Ya tienes una cuenta?
                @Html.ActionLink("Inicia sesión", "Autenticar", "Home", null, new { @class = "text-slate-800 hover:underline" })
            </p>
        }

    </section>

    <script>
        const showPassword = document.getElementById('showPassword');
        const pwd = document.getElementById('Clave');
        if (showPassword && pwd) {
            showPassword.addEventListener('change', function () {
                pwd.type = this.checked ? 'text' : 'password';
            });
        }
    </script>

</body>
</html>
