@{
    ViewBag.Title = "Nomina";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Nomina ISTER</h1>
        <p class="lead">Sistema de Nómina con gestión de empleados y departamentos.</p>
    </section>

    <div class="row flex-column ">
        <!-- Sección Departamentos -->
        <section class="col-md-4" aria-labelledby="departamentosTitle">
            <h2 id="departamentosTitle">Departamentos</h2>
            <p>
                Administra los distintos departamentos de la organización.
            </p>
            <p>
                <a class="btn btn-outline-dark" href="@Url.Action("Index", "Departamentos")">
                    Ir a Departamentos &raquo;
                </a>
            </p>
        </section>

        <!-- Sección Empleados -->
        <section class="col-md-4" aria-labelledby="empleadosTitle">
            <h2 id="empleadosTitle">Empleados</h2>
            <p>
                Consulta, edita y administra la información de los empleados.
            </p>
            <p>
                <a class="btn btn-outline-dark" href="@Url.Action("Index", "Empleados")">
                    Ir a Empleados &raquo;
                </a>
            </p>
        </section>

        <!-- Otra sección opcional -->
        <section class="col-md-4" aria-labelledby="otrosTitle">
            <h2 id="otrosTitle">Asignaciones</h2>
            <p>
                Asigna empleados a departamentos y administra periodos de trabajo.
            </p>
            <p>
                <a class="btn btn-outline-dark" href="@Url.Action("Index", "DeptEmp")">
                    Ir a Asignaciones &raquo;
                </a>
            </p>
        </section>
    </div>
</main>
