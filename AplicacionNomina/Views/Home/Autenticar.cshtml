@model AplicacionNomina.Models.LoginVM
@{
    ViewBag.Title = "Autenticar";
    Layout = null; // página independiente (sin _Layout)
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Nomina - Iniciar sesión</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { theme: { extend: { colors: { brand: "#ff3b4e" } } } };
    </script>
</head>
<body class="min-h-screen flex items-center justify-center bg-black">

    <section class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md">
        <h3 class="text-center text-slate-500 font-semibold">¡Bienvenida/o!</h3>
        <h2 class="text-center text-3xl mb-2">Nómina ISTER</h2>
        <p class="text-center text-slate-500 mb-6">Inicia sesión para continuar</p>

        @* Errores de validación del servidor *@
        @Html.ValidationSummary(true, "", new { @class = "mb-4 rounded-lg border border-rose-200 bg-rose-50 text-rose-700 px-4 py-3 text-sm" })

        @using (Html.BeginForm("Index", "Acceso", FormMethod.Post, new { autocomplete = "on" }))
        {
            @Html.AntiForgeryToken()

            <div class="mb-4">
                @Html.LabelFor(m => m.Usuario, new { @class = "block text-sm font-medium text-slate-700 mb-1" })
                @Html.TextBoxFor(m => m.Usuario, new
                {
                    @class = "block w-full rounded-lg border border-slate-300 px-4 py-2 text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400",
                    placeholder = "usuario o correo",
                    autofocus = "autofocus",
                    autocomplete = "username"
                })
                @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-sm text-rose-600" })
            </div>

            <div class="mb-4">
                @Html.LabelFor(m => m.Clave, "Contraseña", new { @class = "block text-sm font-medium text-slate-700 mb-1" })
                <div class="relative">
                    @Html.PasswordFor(m => m.Clave, new
                    {
                        id = "Clave",
                        @class = "block w-full rounded-lg border border-slate-300 px-4 py-2 pr-10 text-slate-900 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:border-slate-400",
                        placeholder = "contraseña",
                        autocomplete = "current-password"
                    })
                    <button type="button" id="togglePwd"
                            class="absolute inset-y-0 right-0 px-3 text-slate-500 hover:text-slate-700"
                            aria-label="Mostrar u ocultar contraseña">
                        👁
                    </button>
                </div>
                @Html.ValidationMessageFor(m => m.Clave, "", new { @class = "text-sm text-rose-600" })
            </div>

            <div class="mb-4 flex items-center gap-2">
                <input id="Remember" name="Remember" type="checkbox"
                       class="h-4 w-4 rounded border-slate-300 text-brand focus:ring-brand" />
                <label for="Remember" class="text-sm text-slate-600">Recordarme</label>
            </div>

            <button type="submit"
                    class="w-full rounded-lg bg-brand hover:bg-[#e83547] text-white font-semibold py-2 shadow transition">
                Iniciar sesión
            </button>
        }

        <p class="text-center text-slate-500 mt-4 text-sm">
            ¿No tienes una cuenta?
            @Html.ActionLink("Regístrate", "Registrar", "Home", null, new { @class = "text-slate-800 hover:underline" })
        </p>
    </section>

    @* Como esta página no usa _Layout, incluimos los bundles aquí para validación *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        (function () {
            var btn = document.getElementById('togglePwd');
            var pwd = document.getElementById('Clave');
            if (btn && pwd) {
                btn.addEventListener('click', function () {
                    pwd.type = (pwd.type === 'password') ? 'text' : 'password';
                });
            }
        })();

        // Mensajes de validación al español (rápido) si no cargaste messages_es.js
        if (window.jQuery && $.validator) {
            $.extend($.validator.messages, {
                required: "Este campo es obligatorio.",
                email: "Ingrese un correo electrónico válido."
            });
        }
    </script>
</body>
</html>
