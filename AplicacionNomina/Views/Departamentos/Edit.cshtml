@model AplicacionNomina.Models.Department
@{
    ViewBag.Title = "Editar departamento";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Departamentos", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.DeptNo)

    <div class="form-group">
        @Html.LabelFor(m => m.DeptName)
        @Html.TextBoxFor(m => m.DeptName, new { @class = "form-control", placeholder = "Nombre del departamento" })
        @Html.ValidationMessageFor(m => m.DeptName)
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
}
