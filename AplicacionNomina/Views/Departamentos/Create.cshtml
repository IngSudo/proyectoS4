@model AplicacionNomina.Models.Department
@{
    ViewBag.Title = "Crear departamento";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.DeptNo)
        @Html.TextBoxFor(m => m.DeptNo, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DeptNo)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DeptName)
        @Html.TextBoxFor(m => m.DeptName, new { @class = "form-control", placeholder = "Nombre del departamento" })
        @Html.ValidationMessageFor(m => m.DeptName)
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a href="@Url.Action("Index")" class="btn btn-default">Cancelar</a>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
